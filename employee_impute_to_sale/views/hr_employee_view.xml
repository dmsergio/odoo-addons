<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="hr_employee_product_form_view" model="ir.ui.view">
    <field name="name">hr_employee_product_form_view</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">
      <page name="hr_settings" position="after">
        <page name="expense_impute" string="Imputación de gastos">
          <group>
            <group>
              <field name="product_id"/>
            </group>
            <group>
              <button name="launch_impute_sale_wiz"
                      string="Imputar gastos"
                      help="Permite imputar los gastos de un empleado o una máquina en un pedido de venta determinado."
                      type="object"
                      class="oe_highlight"/>
            </group>
          </group>
        </page>
      </page>
    </field>
  </record>
</odoo>

