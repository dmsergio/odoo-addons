<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="sale_order_line_date_tree_view" model="ir.ui.view">
    <field name="name">sale.order.line.date.tree.view</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr='//field[@name="order_line"]//form/group/group/field[@name="tax_id"]' position="before">
        <field name="order_date"/>
        <field name="type_working_day" readonly="1"/>
      </xpath>
      <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
        <field name="type_working_day" readonly="1"/>
        <field name="order_date"/>
        <field name="sale_line_plant_hours"/>
      </xpath>
      <xpath expr="//field[@name='partner_id']" position="after">
        <field name="global_price"/>
      </xpath>
      <xpath expr="//field[@name='pricelist_id']" position="after">
        <field name="picking_pending"/>
      </xpath>
    </field>
  </record>

  <record id="action_orders_picking_pending" model="ir.actions.act_window">
            <field name="name">Pedidos Pendientes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[('picking_pending','=',True)]</field>
            <field name="search_view_id" ref="sale.view_sales_order_filter"/>
            <field name="help" type="html">
              <p>
                You will find here all orders that are picking pending.
              </p>
            </field>
        </record>

  <menuitem action="action_orders_picking_pending"
            id="menu_sale_order_picking_pending" parent="sale.menu_sale_invoicing"
            sequence="1"/>


</odoo>
